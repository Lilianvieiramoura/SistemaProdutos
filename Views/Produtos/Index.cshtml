@model IEnumerable<sistemaProdutos.Models.Produto>

<h2>Produtos</h2>

<p>
  <a asp-action="Cadastrar" class="btn btn-primary">Cadastrar novo produto</a>
</p>

<table class="table">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.Nome)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Valor)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Codigo)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.Estoque)
      </th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Valor)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.Estoque)
        </td>
        <td>
          <a asp-action="Editar" class="btn btn-primary" asp-route-id="@item.Id">Editar</a>
          <a asp-action="Excluir" class="btn btn-danger" asp-route-id="@item.Id">Excluir</a>
        </td>
      </tr>
    }
  </tbody>
</table>
